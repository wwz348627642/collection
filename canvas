<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
</head>
<body>
	<div style="width: 600px; margin: 0 auto; border: 1px #eee dashed">
		<canvas width="600" height="600" id="cv"></canvas>
	</div>
	<script>
		window.onload = function () {
			let canvas = document.querySelector('#cv');
			console.log(canvas);
			let c = canvas.getContext('2d');
			console.log(c);
			c.fillRect(10, 10, 100, 120);
			c.fillStyle = 'rgb(200, 0, 0)';
			c.strokeStyle = '#ff0000';
			c.lineWidth = 2;
			c.strokeRect(10, 10, 100, 120);


			c.beginPath();
			c.arc(250, 60, 50, 1 * Math.PI, 1.5 * Math.PI, true);  // x, y, r, startAngle, endAngle, 顺时针/逆时针
			c.closePath();
			c.fill();						


			c.beginPath();       // 开始一个新路径
			c.lineWidth = 5;		
			c.moveTo(450, 60);	 // 画笔从哪开始（开始一个新起点）
			c.lineTo(600, 60);	 // 画线
 			c.moveTo(450, 160);
			c.lineTo(600, 160);
			c.closePath();
			c.stroke();						// 描边
		}
	</script>
</body>
</html>
